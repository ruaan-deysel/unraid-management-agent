// Helper function to generate interval select options
function intervalOptions($selected, $type = 'standard') {
    $options = [];
    $extended = [
        '3600' => '1 hour',
        '7200' => '2 hours',
        '14400' => '4 hours',
        '21600' => '6 hours',
        '43200' => '12 hours',
        '86400' => '24 hours',
    ];
    if ($type === 'fast') {
        $options = [
            '0' => 'Disabled',
            '5' => '5 seconds',
            '10' => '10 seconds',
            '15' => '15 seconds',
            '30' => '30 seconds',
            '60' => '1 minute',
            '120' => '2 minutes',
            '300' => '5 minutes',
            '600' => '10 minutes',
            '900' => '15 minutes',
            '1800' => '30 minutes',
        ] + $extended;
    } elseif ($type === 'standard') {
        $options = [
            '0' => 'Disabled',
            '10' => '10 seconds',
            '15' => '15 seconds',
            '30' => '30 seconds',
            '60' => '1 minute',
            '120' => '2 minutes',
            '300' => '5 minutes',
            '600' => '10 minutes',
            '900' => '15 minutes',
            '1800' => '30 minutes',
        ] + $extended;
    } elseif ($type === 'slow') {
        $options = [
            '0' => 'Disabled',
            '60' => '1 minute',
            '120' => '2 minutes',
            '300' => '5 minutes',
            '600' => '10 minutes',
            '900' => '15 minutes',
            '1800' => '30 minutes',
        ] + $extended;
    }
    $html = '';
    foreach ($options as $value => $label) {
        $isSelected = ($selected == $value) ? 'selected' : '';
        $html .= "<option value=\"$value\" $isSelected>$label</option>";
    }
    return $html;
}
