// Helper function to generate interval select options
function intervalOptions($selected, $type = 'standard') {
    $options = [];
    
    if ($type === 'fast') {
        // For system metrics that can update quickly
        $options = [
            '5' => '5 seconds',
            '10' => '10 seconds',
            '15' => '15 seconds',
            '30' => '30 seconds',
            '60' => '1 minute',
            '120' => '2 minutes',
            '300' => '5 minutes',
        ];
    } elseif ($type === 'standard') {
        // For most collectors
        $options = [
            '10' => '10 seconds',
            '15' => '15 seconds',
            '30' => '30 seconds',
            '60' => '1 minute',
            '120' => '2 minutes',
            '300' => '5 minutes',
        ];
    } elseif ($type === 'slow') {
        // For hardware/registration that rarely changes
        $options = [
            '60' => '1 minute',
            '120' => '2 minutes',
            '300' => '5 minutes',
            '600' => '10 minutes',
            '900' => '15 minutes',
            '1800' => '30 minutes',
        ];
    }
    
    $html = '';
    foreach ($options as $value => $label) {
        $isSelected = ($selected == $value) ? 'selected' : '';
        $html .= "<option value=\"$value\" $isSelected>$label</option>";
    }
    return $html;
}

