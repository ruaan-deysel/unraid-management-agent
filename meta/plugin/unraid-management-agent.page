$plugin = "unraid-management-agent";
$config_file = "/boot/config/plugins/$plugin/config.cfg";
$service_name = "unraid-management-agent";

// Load current configuration
$config = [];
if (file_exists($config_file)) {
    $config = parse_ini_file($config_file);
}

// Default values
$port = $config['PORT'] ?? '8043';
$log_level = $config['LOG_LEVEL'] ?? 'info';

// Collection interval defaults (power-optimized)
$interval_system = $config['INTERVAL_SYSTEM'] ?? '15';
$interval_array = $config['INTERVAL_ARRAY'] ?? '30';
$interval_disk = $config['INTERVAL_DISK'] ?? '30';
$interval_docker = $config['INTERVAL_DOCKER'] ?? '30';
$interval_vm = $config['INTERVAL_VM'] ?? '30';
$interval_ups = $config['INTERVAL_UPS'] ?? '60';
$interval_gpu = $config['INTERVAL_GPU'] ?? '60';
$interval_shares = $config['INTERVAL_SHARES'] ?? '60';
$interval_network = $config['INTERVAL_NETWORK'] ?? '30';
$interval_zfs = $config['INTERVAL_ZFS'] ?? '30';
$interval_notification = $config['INTERVAL_NOTIFICATION'] ?? '30';
$interval_hardware = $config['INTERVAL_HARDWARE'] ?? '300';
$interval_registration = $config['INTERVAL_REGISTRATION'] ?? '300';
$interval_unassigned = $config['INTERVAL_UNASSIGNED'] ?? '60';

// Check if service is running
function isServiceRunning() {
    exec("pgrep -f 'unraid-management-agent --logs-dir' 2>&1", $output, $return);
    return $return === 0 && !empty($output);
}

$running = isServiceRunning();
$status_text = $running ? "<span style='color:green;'>RUNNING</span>" : "<span style='color:red;'>STOPPED</span>";

// Handle form submission
if ($_POST) {
    if (isset($_POST['start'])) {
        exec("/usr/local/emhttp/plugins/$plugin/scripts/start > /dev/null 2>&1 &");
        sleep(1);
    } elseif (isset($_POST['stop'])) {
        exec("/usr/local/emhttp/plugins/$plugin/scripts/stop > /dev/null 2>&1 &");
        sleep(1);
    } elseif (isset($_POST['restart'])) {
        exec("/usr/local/emhttp/plugins/$plugin/scripts/stop > /dev/null 2>&1");
        sleep(1);
        exec("/usr/local/emhttp/plugins/$plugin/scripts/start > /dev/null 2>&1 &");
        sleep(1);
    } elseif (isset($_POST['apply'])) {
        // Save configuration
        $new_config = "# Unraid Management Agent Configuration\n\n";
        $new_config .= "# API Server Configuration\n";
        $new_config .= "PORT=" . $_POST['port'] . "\n";
        $new_config .= "LOG_LEVEL=" . $_POST['log_level'] . "\n\n";
        $new_config .= "# Collection Intervals (seconds)\n";
        $new_config .= "# Higher intervals reduce power consumption, lower intervals provide faster updates\n";
        $new_config .= "INTERVAL_SYSTEM=" . $_POST['interval_system'] . "\n";
        $new_config .= "INTERVAL_ARRAY=" . $_POST['interval_array'] . "\n";
        $new_config .= "INTERVAL_DISK=" . $_POST['interval_disk'] . "\n";
        $new_config .= "INTERVAL_DOCKER=" . $_POST['interval_docker'] . "\n";
        $new_config .= "INTERVAL_VM=" . $_POST['interval_vm'] . "\n";
        $new_config .= "INTERVAL_UPS=" . $_POST['interval_ups'] . "\n";
        $new_config .= "INTERVAL_GPU=" . $_POST['interval_gpu'] . "\n";
        $new_config .= "INTERVAL_SHARES=" . $_POST['interval_shares'] . "\n";
        $new_config .= "INTERVAL_NETWORK=" . $_POST['interval_network'] . "\n";
        $new_config .= "INTERVAL_ZFS=" . $_POST['interval_zfs'] . "\n";
        $new_config .= "INTERVAL_NOTIFICATION=" . $_POST['interval_notification'] . "\n";
        $new_config .= "INTERVAL_HARDWARE=" . $_POST['interval_hardware'] . "\n";
        $new_config .= "INTERVAL_REGISTRATION=" . $_POST['interval_registration'] . "\n";
        $new_config .= "INTERVAL_UNASSIGNED=" . $_POST['interval_unassigned'] . "\n";
        file_put_contents($config_file, $new_config);

        // Restart service if running
        if ($running) {
            exec("/usr/local/emhttp/plugins/$plugin/scripts/stop > /dev/null 2>&1");
            sleep(1);
            exec("/usr/local/emhttp/plugins/$plugin/scripts/start > /dev/null 2>&1 &");
            sleep(1);
        }
    } elseif (isset($_POST['default'])) {
        // Reset to defaults (power-optimized values)
        $default_config = "# Unraid Management Agent Configuration\n\n";
        $default_config .= "# API Server Configuration\n";
        $default_config .= "PORT=8043\n";
        $default_config .= "LOG_LEVEL=info\n\n";
        $default_config .= "# Collection Intervals (seconds) - Power-optimized defaults\n";
        $default_config .= "INTERVAL_SYSTEM=15\n";
        $default_config .= "INTERVAL_ARRAY=30\n";
        $default_config .= "INTERVAL_DISK=30\n";
        $default_config .= "INTERVAL_DOCKER=30\n";
        $default_config .= "INTERVAL_VM=30\n";
        $default_config .= "INTERVAL_UPS=60\n";
        $default_config .= "INTERVAL_GPU=60\n";
        $default_config .= "INTERVAL_SHARES=60\n";
        $default_config .= "INTERVAL_NETWORK=30\n";
        $default_config .= "INTERVAL_ZFS=30\n";
        $default_config .= "INTERVAL_NOTIFICATION=30\n";
        $default_config .= "INTERVAL_HARDWARE=300\n";
        $default_config .= "INTERVAL_REGISTRATION=300\n";
        $default_config .= "INTERVAL_UNASSIGNED=60\n";
        file_put_contents($config_file, $default_config);
        
        // Restart service if running
        if ($running) {
            exec("/usr/local/emhttp/plugins/$plugin/scripts/stop > /dev/null 2>&1");
            sleep(1);
            exec("/usr/local/emhttp/plugins/$plugin/scripts/start > /dev/null 2>&1 &");
            sleep(1);
        }
    }
    
    // Redirect to refresh page
    header("Location: /Settings/unraid-management-agent");
    exit;
}
