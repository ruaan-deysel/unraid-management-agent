<script>
// Service control via AJAX
function serviceControl(action) {
    var btn = document.getElementById('uma-btn-startstop');
    var restartBtn = document.getElementById('uma-btn-restart');
    btn.disabled = true;
    restartBtn.disabled = true;
    btn.value = action === 'stop' ? 'Stopping...' : action === 'start' ? 'Starting...' : 'Restarting...';

    $.post('/plugins/<?=$plugin?>/include/exec.php', {action: action}, function() {
        // Don't trust the immediate response — confirm with a status poll
        setTimeout(pollStatus, 2500);
    }, 'json').fail(function() {
        setTimeout(pollStatus, 3000);
    });
}

function pollStatus() {
    $.post('/plugins/<?=$plugin?>/include/exec.php', {action: 'status'}, function(data) {
        var running = (data.running === true || data.running === 'true');
        updateServiceStatus(running);
    }, 'json').fail(function() {
        location.reload();
    });
}

function updateServiceStatus(running) {
    var statusOrb = document.getElementById('uma-status-orb');
    var statusText = document.getElementById('uma-status-text');
    var btn = document.getElementById('uma-btn-startstop');
    var restartBtn = document.getElementById('uma-btn-restart');
    var endpoints = document.getElementById('uma-endpoints');

    if (running) {
        statusOrb.className = 'fa fa-circle green-orb';
        statusText.textContent = 'RUNNING';
        statusText.className = 'uma-status-text running';
        btn.value = 'Stop';
        btn.onclick = function() { serviceControl('stop'); };
        btn.disabled = false;
        restartBtn.disabled = false;
        endpoints.style.display = 'block';
    } else {
        statusOrb.className = 'fa fa-circle grey-orb';
        statusText.textContent = 'STOPPED';
        statusText.className = 'uma-status-text stopped';
        btn.value = 'Start';
        btn.onclick = function() { serviceControl('start'); };
        btn.disabled = false;
        restartBtn.disabled = true;
        endpoints.style.display = 'none';
    }
}

// Toggle MQTT fields visibility
function toggleMQTTFields() {
    var enabled = document.getElementById('mqtt_enabled').checked;
    document.getElementById('mqtt_fields').style.display = enabled ? 'block' : 'none';
    document.getElementById('mqtt_enabled_val').value = enabled ? 'true' : 'false';
}

function updateMQTTHA() {
    var enabled = document.getElementById('mqtt_ha_enabled').checked;
    document.getElementById('mqtt_ha_val').value = enabled ? 'true' : 'false';
}

// Highlight disabled interval selects
function updateDisabledHighlighting() {
    document.querySelectorAll('.uma-interval-select').forEach(function(select) {
        if (select.value === '0') {
            select.classList.add('is-disabled');
        } else {
            select.classList.remove('is-disabled');
        }
    });
}

$(function() {
    updateDisabledHighlighting();
    document.querySelectorAll('.uma-interval-select').forEach(function(select) {
        select.addEventListener('change', updateDisabledHighlighting);
    });
});
</script>
